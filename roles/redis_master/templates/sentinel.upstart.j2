#! /bin/sh
### BEGIN INIT INFO
# Provides:		redis-server
# Required-Start:	$syslog $remote_fs
# Required-Stop:	$syslog $remote_fs
# Should-Start:		$local_fs
# Should-Stop:		$local_fs
# Default-Start:	2 3 4 5
# Default-Stop:		0 1 6
# Short-Description:	sentinel - monitor for sentinel 
# Description:		sentinel - monitor for sentinel
### END INIT INFO


PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin
DAEMON={{ exec_dir }}/redis-sentinel
DAEMON_ARGS={{ deploy_base }}/{{ main_name }}/sentinel.conf
NAME=redis-sentinel
DESC=redis-sentinel

RUNDIR=/var/run/redis
PIDFILE=$RUNDIR/redis-sentinel.pid
LOGDIR=/var/log/redis
LOGFILE=$LOGDIR/redis-sentinel.log

test -x $DAEMON || exit 0

set -e

case "$1" in
  start)
	echo -n "Starting $DESC: "
	touch $PIDFILE
	chmod 755 $RUNDIR
	if $DAEMON $DAEMON_ARGS >> $LOGFILE 2>&1 &
	then
		echo "$NAME."
	else
		echo "failed"
	fi
	`which pidof` $NAME > $PIDFILE
	;;
  stop)
	echo -n "Stopping $DESC: "
	if [ -s $PIDFILE ] && kill -9 `cat $PIDFILE` 
	then
		echo "$NAME."
	else
		echo "failed"
	fi
	rm -f $PIDFILE
	;;

  restart|force-reload)
	${0} stop
	${0} start
	;;

  status)
	echo -n "$DESC is "
	if [ -s $PIDFILE ] && ps -ef | grep -v grep | grep -qw `cat $PIDFILE`
	then
		echo "running"
	else
		echo "not running"
		exit 1
	fi
	;;

  *)
	echo "Usage: /etc/init.d/$NAME {start|stop|restart|force-reload}" >&2
	exit 1
	;;
esac

exit 0
